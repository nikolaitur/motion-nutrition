      "type": "text",
      "id": "title",
      "label": "Title"
    },

{
      "type": "html",
      "id": "content",
      "label": "Content"
    },
{
      "type": "text",
      "id": "btn-title",
      "label": "Btn Title"
    },
{
      "type": "url",
      "id": "btn-link",
      "label": "Btn Link"
    },
{
      "type": "html",
      "id": "review-text",
      "label": "Review Text"
    }
],
  "presets": [
    {
      "name": "Home Top Banner",
      "category": "Home Section"
    }
  ]
  }
{% endschema %}

